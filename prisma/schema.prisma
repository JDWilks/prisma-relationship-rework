model Book{
  id  Int @id @default(autoincrement())
  title String @db.VarChar(200)
  type String
  author String
  topic String
  publicationdate DateTime 
}

model User{
  id  Int @id @default(autoincrement())
  name String @db.VarChar(200)
  age Int
  orders Order[]
}

model Order{
  orderid Int @id @default(autoincrement())
  quantity Int
  userid  Int
  user User @relation(fields: [userid], references: [id])
}